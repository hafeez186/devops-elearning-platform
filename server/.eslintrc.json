{
  "root": true,
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn"],
    "no-console": "off",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "dist/",
    "uploads/",
    "*.test.ts",
    "*.spec.ts"
  ]
}
